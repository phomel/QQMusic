
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/MenuIcon</item>
        <item name="actionOverflowMenuStyle">@style/MenuStyle</item>
    </style>

    <style name="MenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="MenuIcon" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/player_morebt_normal</item>
    </style>
</resources>